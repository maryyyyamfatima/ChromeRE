<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="36dp">
    <ImageView
        android:id="@+id/control_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_marginEnd="@dimen/0_resource_name_obfuscated_res_0x7f0801e3"/>
    <org.chromium.components.browser_ui.widget.DualControlLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textAppearance="@style/0_resource_name_obfuscated_res_0x7f15043f"
            android:id="@+id/control_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/0_resource_name_obfuscated_res_0x7f150443"
            android:id="@+id/control_secondary_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </org.chromium.components.browser_ui.widget.DualControlLayout>
</LinearLayout>
