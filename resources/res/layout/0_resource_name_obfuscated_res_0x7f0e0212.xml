<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/seekbar_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40sp"
            style="@style/0_resource_name_obfuscated_res_0x7f15024c"/>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/0_resource_name_obfuscated_res_0x7f15030f"
        android:id="@+id/preview"
        android:background="@drawable/0_resource_name_obfuscated_res_0x7f09046d"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="180dp"
        android:text="@string/0_resource_name_obfuscated_res_0x7f1404bb"
        android:lineSpacingExtra="6dp"/>
</LinearLayout>
