<?xml version="1.0" encoding="utf-8"?>
<org.chromium.chrome.browser.ui.signin.SigninView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.chromium.chrome.browser.ui.signin.SigninScrollView
        android:id="@+id/signin_scroll_view"
        android:scrollbars="none"
        android:fadingEdgeLength="48dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:requiresFadingEdge="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/signin_header_image"
                android:background="@color/0_resource_name_obfuscated_res_0x7f070867"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/0_resource_name_obfuscated_res_0x7f090499"/>
            <TextView
                android:textAppearance="@style/0_resource_name_obfuscated_res_0x7f1503dd"
                android:id="@+id/signin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/signin_header_image"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/signin_account_picker"
                android:background="@drawable/0_resource_name_obfuscated_res_0x7f090096"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/signin_title"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <include layout="@layout/0_resource_name_obfuscated_res_0x7f0e0030"/>
                <ImageView
                    android:id="@+id/account_picker_end_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/0_resource_name_obfuscated_res_0x7f15043f"
                android:id="@+id/signin_sync_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/signin_account_picker"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:textAppearance="@style/0_resource_name_obfuscated_res_0x7f150452"
                android:id="@+id/signin_sync_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signin_sync_title"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <View
                android:id="@+id/signin_divider"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/signin_sync_description"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/0_resource_name_obfuscated_res_0x7f1501cf"/>
            <org.chromium.ui.widget.TextViewWithClickableSpans
                android:textAppearance="@style/0_resource_name_obfuscated_res_0x7f150452"
                android:id="@+id/signin_details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/signin_divider"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>
    </org.chromium.chrome.browser.ui.signin.SigninScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/button_bar"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <org.chromium.ui.widget.ButtonCompat
            android:id="@+id/negative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/0_resource_name_obfuscated_res_0x7f15047e"/>
        <View
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <org.chromium.ui.widget.ButtonCompat
            android:id="@+id/positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/0_resource_name_obfuscated_res_0x7f1501c6"/>
        <org.chromium.ui.widget.ButtonCompat
            android:id="@+id/more_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/0_resource_name_obfuscated_res_0x7f090165"
            style="@style/0_resource_name_obfuscated_res_0x7f15047e"/>
        <View
            android:id="@+id/positive_button_end_padding"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</org.chromium.chrome.browser.ui.signin.SigninView>
